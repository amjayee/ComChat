<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/usrProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="41dp"
        android:src="@drawable/ico_user" />

    <TextView
        android:id="@+id/usrProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView2"
        android:layout_below="@+id/TextView2"
        android:text="9886815141"
        android:textColor="#008800"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_SignIn"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/image_SignIn"
        android:text="Bruce Wane"
        android:textColor="#0088DD"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usrProfileStat"
        android:layout_below="@+id/image_SignIn"
        android:layout_marginTop="45dp"
        android:text="Mobile"
        android:textColor="#888888"
        android:textStyle="bold" >

    </TextView>

    <TextView
        android:id="@+id/usrProfileStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_SignIn"
        android:layout_centerVertical="true"
        android:text="Here is the User&apos;s status message"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textboxSettings2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textboxChats"
        android:layout_alignBottom="@+id/textboxChats"
        android:layout_alignRight="@+id/imageDislike"
        android:text="DISLIKE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usrProfileStat"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/TextView2"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textboxChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLike"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/textSettings"
        android:text="LIKE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageDislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageLike"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
